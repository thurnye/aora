{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["nativewind/types"], // Add NativeWind types
    "jsx": "react",               // Ensure React JSX type is set
    "moduleResolution": "node",   // Ensure Node resolution is used
    "esModuleInterop": true,      // Ensure ES module interoperability
    "skipLibCheck": true          // Skip library checks for faster builds
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
